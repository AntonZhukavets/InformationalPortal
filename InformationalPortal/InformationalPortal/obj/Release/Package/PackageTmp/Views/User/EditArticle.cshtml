@model InformationalPortal.Models.Article
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditArticle</title>
</head>
<body>
    <h1>Edit article</h1>
    <div>
        <div>
            <table>
                <tr>
                    <td>Id:</td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>Text:</td>
                    <td>@Model.Details.Text</td>
                </tr>
                <tr>
                    <td>Picture:</td>
                    <td>@Model.PictureLink</td>
                </tr>
                <tr>
                    <td>Language:</td>
                    <td>@Model.Details.Language</td>
                </tr>
                <tr>
                    <td>Date:</td>
                    <td>@Model.Details.Date</td>
                </tr>
                <tr>
                    <td>Video:</td>
                    <td>@Model.Details.VideoLink</td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
