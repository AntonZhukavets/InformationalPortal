@model List<InformationalPortal.Models.Article>     
 
@{
    int counter = 0;
    bool exitFlag = false;
    <div class="articlesTable"> 
        @if(Model.Count!=0)
        { 
    <table width="100">
        @while (!exitFlag)
        {
            <tr>
                @for (int i = 0; i < 3; i++)
                {
                    if (counter < Model.Count)
                    {
                        
                        <td width="33%">
                            <table align="center">
                                <tr><td align="center">Author: @Model[counter].AutherName</td></tr>
                                <tr><td align="center">@Model[counter].Id</td></tr>
                                <tr><td align="center">@Html.ActionLink(Model[counter].Name, "GetFullArticle","Home", new { id = Model[counter].Id },null)</td></tr>                                
                                <tr><td><img src="data:image;base64,@System.Convert.ToBase64String(Model[counter].Picture)" width="80" height="80"></td></tr>
                            </table>
                        </td>
                    }
                    else
                    {
                        <td width="33%"></td>
                        exitFlag = true;
                    }

                    counter++;

                }
                @if (exitFlag)
                {
                    break;
                }
            </tr>
        }
    </table>
        }
    </div>  
    
    
    
   
    
    
      
}

    




