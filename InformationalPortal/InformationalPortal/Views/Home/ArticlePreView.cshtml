@model List<InformationalPortal.Models.Article>      
 
@{
    int counter = 0;
    bool exitFlag = false;
    <div id="articlesTable"> 
        @if(Model.Count!=0)
        { 
    <table width="100">
        @while (!exitFlag)
        {
            <tr>
                @for (int i = 0; i < 3; i++)
                {
                    if (counter < Model.Count)
                    {
                        
                        <td width="33%">
                            <table align="center">
                                <tr><td align="center">@Model[counter].Id</td></tr>
                                <tr><td align="center">@Html.ActionLink(Model[counter].Name, "GetArticle", new { id = Model[counter].Id })</td></tr>
                                <tr><td align="center">@Model[counter].PictureLink</td></tr>
                            </table>
                        </td>


                    }
                    else
                    {
                        <td width="33%"></td>
                        exitFlag = true;
                    }

                    counter++;

                }
                @if (exitFlag)
                {
                    break;
                }
            </tr>
        }
    </table>
        }
    </div>
}
    




