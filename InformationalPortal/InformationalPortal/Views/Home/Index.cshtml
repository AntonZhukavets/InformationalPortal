@model List<InformationalPortal.Models.Article>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/CSS/Portal.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <div>
        <div id="AjaxTestDiv"></div>
        <script src="~/Scripts/jquery-3.2.1.min.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
        <h1>Informational portal</h1>       
        <table border="1">
            <tr>
                <td valign="top" width="10%" align="center">
                    <h3>
                        @foreach (InformationalPortal.Models.Heading heading in ViewBag.Headings)
                        {
                            
                            <br />@Ajax.ActionLink(heading.Name, "GetArticlesByHeadingId", "Home", new { id = heading.Id }, new AjaxOptions { UpdateTargetId = "articlesTable" }) ;          
                                                       
                        }
                    </h3>
                </td>
                <td align="center">                                         
                    @Html.Partial("ArticlePreView", Model)                  
                </td>
            </tr>


        </table>

       
    
    </div>   
    
    
