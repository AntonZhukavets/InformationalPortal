@model InformationalPortal.Models.Article[]     
 
@{
    int counter = 0;
    bool exitFlag = false;
    if(Model.Length>0)
    {
        while(!exitFlag)
        {
            <div class="ArticleRow">
                @for(int i=0;i<3;i++)
                {
                    if(counter<Model.Length)
                    {
                        <div class="ArticlePreView">
                            @Html.Label("Author:")
                            @Html.Label(Model[counter].AutherName)
                            <br />                                                        
                            @Html.ActionLink(Model[counter].Name, "GetFullArticle", "Home", new { id = Model[counter].Id }, new { @class = "Title" })
                            <br />
                            @if(Model[counter].Picture!=null)
                            {
                                <a href="@Url.Action("GetFullArticle", "Home", new { id = Model[counter].Id }, null)">
                                    <img src="data:image;base64,@System.Convert.ToBase64String(Model[counter].Picture)" width="200" height="200">
                                </a>     
                            }                       
                        </div>                    
                        
                            
                        
                    }
                    else
                    {
                        exitFlag = true;
                    }
                    counter++;
                }
            </div>
        }
    }
    
    
